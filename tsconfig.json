{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "declaration": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*",
  ],
  "exclude": [
    "./node_modules",
    "dist/"
  ]
}
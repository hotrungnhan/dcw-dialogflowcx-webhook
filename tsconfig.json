{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}